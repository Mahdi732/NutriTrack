<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile - Nutrition Plan</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&display=swap');
    .font-serif { font-family: 'Crimson Pro', serif; }
  </style>
</head>
<body class="bg-stone-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-white border-b border-stone-200">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <div class="flex items-center gap-2">
        <span class="text-2xl">üçé</span>
        <span class="font-serif font-semibold text-lg text-stone-900">Nutrition Plan</span>
      </div>
      <nav class="space-x-6 text-sm">
        <a href="/" class="text-stone-900 hover:text-stone-600 transition">Home</a>
        <a href="/meal" class="text-stone-600 hover:text-stone-900 transition">Analysis</a>
        <a href="/rapport" class="text-stone-600 hover:text-stone-900 transition">Reports</a>
        <% if (user) { %>
        <a href="/profile" class="text-stone-600 hover:text-stone-900 transition">Profile</a>
        <% } else { %>
        <a href="/auth/login" class="px-4 py-2 border border-stone-300 rounded hover:bg-stone-50 transition">Login</a>
        <% } %>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow py-10">
    <div class="max-w-4xl mx-auto px-4">
      
      <!-- Profile Header -->
      <div class="bg-white border border-stone-200 rounded-lg p-8 mb-6">
        <div class="flex items-center gap-6">
          <!-- Avatar Placeholder -->
          <div class="w-24 h-24 rounded-full bg-stone-200 border-2 border-stone-300 flex items-center justify-center">
            <svg class="w-12 h-12 text-stone-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </div>
          
          <!-- User Info -->
          <div class="flex-grow">
            <h1 class="font-serif text-3xl font-semibold text-stone-900 mb-1">John Doe</h1>
          </div>
        </div>
      </div>

      <!-- User Profile Form -->
      <form id="profileForm" class="bg-white border border-stone-200 rounded-lg p-8 space-y-6" novalidate>
        <h2 class="font-serif text-2xl font-semibold text-stone-900 pb-2 border-b border-stone-200">
          Profile Information
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Gender -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Gender</label>
            <select name="sexe" required
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 bg-white text-stone-900">
              <option value="">-- Select --</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>

          <!-- Height -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Height (cm)</label>
            <input type="number" step="0.01" name="taille_cm" placeholder="175.00"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 text-stone-900"
              required>
          </div>

          <!-- Current Weight -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Current Weight (kg)</label>
            <input type="number" step="0.01" name="poids_actuel_kg" placeholder="70.50"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 text-stone-900"
              required>
          </div>

          <!-- Target Weight -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Target Weight (kg)</label>
            <input type="number" step="0.01" name="poids_cible_kg" placeholder="68.00"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 text-stone-900">
          </div>

          <!-- Activity Level -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Activity Level</label>
            <select name="niveau_activite"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 bg-white text-stone-900">
              <option value="">-- Select --</option>
              <option value="low">Low</option>
              <option value="moderate">Moderate</option>
              <option value="high">High</option>
            </select>
          </div>

          <!-- Sport Discipline -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Sport Discipline</label>
            <select name="sport_discipline"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 bg-white text-stone-900">
              <option value="">None</option>
              <option value="endurance">Endurance</option>
              <option value="strength">Strength</option>
              <option value="mixed">Mixed</option>
            </select>
          </div>

          <!-- Average Duration -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Average Duration (min)</label>
            <input type="number" name="duree_moyenne_min" placeholder="45"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 text-stone-900">
          </div>

          <!-- Energy Expenditure -->
          <div class="space-y-2 md:col-span-2">
            <label class="block text-sm font-medium text-stone-900">Energy Expenditure (kcal/day)</label>
            <input type="number" name="depense_energetique" placeholder="2300"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 text-stone-900">
          </div>
        </div>

        <!-- Goals Section -->
        <h3 class="font-serif text-xl font-semibold text-stone-900 pt-4 pb-2 border-b border-stone-200">Nutrition Goals</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Goal -->
          <div class="space-y-2">
            <label class="block text-sm font-medium text-stone-900">Goal</label>
            <select name="objectif"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 bg-white text-stone-900">
              <option value="">-- Select --</option>
              <option value="weight_loss">Weight Loss</option>
              <option value="muscle_gain">Muscle Gain</option>
              <option value="maintenance">Maintenance</option>
              <option value="performance">Performance</option>
            </select>
          </div>

          <!-- Medical Condition -->
          <div class="space-y-2 md:col-span-2">
            <label class="block text-sm font-medium text-stone-900">Medical Condition</label>
            <select name="type_pathologie"
              class="w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-400 bg-white text-stone-900">
              <option value="none">None</option>
              <option value="diabetes">Diabetes</option>
              <option value="hypertension">Hypertension</option>
              <option value="obesity">Obesity</option>
            </select>
          </div>
        </div>

        <!-- Buttons -->
        <div class="flex justify-between pt-6 border-t border-stone-200">
          <button type="submit"
            id="profile-form-button"
            class="px-6 py-2 bg-stone-900 text-white rounded hover:bg-stone-800 transition-colors">
            Save Changes
          </button>
          <button type="reset"
            class="px-6 py-2 border border-stone-300 rounded text-stone-700 hover:bg-stone-50 transition-colors">
            Reset
          </button>
        </div>
      </form>
      <div id="responseDiv" role="alert"></div>
    </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-stone-900 text-stone-300 py-6 mt-10">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center text-sm">
      <p>¬© 2025 Nutrition Plan. All rights reserved.</p>
      <div class="flex gap-6">
        <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
        <a href="/terms" class="hover:text-white transition-colors">Terms</a>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/profile.public.js"></script>
</body>
</html>
