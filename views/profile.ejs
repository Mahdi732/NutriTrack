</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <div class="flex items-center space-x-2">
        <span class="text-2xl">üçé</span>
        <span class="font-bold text-lg">Plan Nutrition</span>
      </div>
      <nav class="space-x-6">
        <a href="/" class="hover:text-blue-600">Accueil</a>
        <a href="/profile" class="hover:text-blue-600">profile</a>
        <a href="/meal" class="hover:text-blue-600">Analyse</a>
        <a href="#" class="hover:text-blue-600">Rapports</a>
        <a href="/auth/login" class="px-4 py-2 border rounded hover:bg-blue-50">Connexion</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow py-10">
    <div class="max-w-4xl mx-auto px-4">
      <!-- User Profile Form -->
      <form id="profileForm" class="bg-white rounded-2xl shadow-md p-6 space-y-6" novalidate>
        <!-- @csrf si Laravel -->
        <input type="hidden" name="user_id" value="{{ user_id }}">

        <h2 class="text-2xl font-semibold text-gray-800">Profil de l‚Äôutilisateur</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Sexe -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Sexe</label>
            <select name="sexe" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
              <option value="">-- Choisir --</option>
              <option value="H">H (Homme)</option>
              <option value="F">F (Femme)</option>
            </select>
          </div>

          <!-- Date de naissance -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Date de naissance</label>
            <input type="date" name="date_naissance" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Taille -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Taille (cm)</label>
            <input type="number" step="0.01" name="taille_cm" placeholder="175.00" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Poids actuel -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Poids actuel (kg)</label>
            <input type="number" step="0.01" name="poids_actuel_kg" placeholder="70.50" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Poids cible -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Poids cible (kg)</label>
            <input type="number" step="0.01" name="poids_cible_kg" placeholder="68.00" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Niveau activit√© -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Niveau d'activit√©</label>
            <select name="niveau_activite" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
              <option value="">-- Choisir --</option>
              <option value="S√©dentaire">S√©dentaire</option>
              <option value="Mod√©r√©">Mod√©r√©</option>
              <option value="Actif">Actif</option>
              <option value="Tr√®s actif">Tr√®s actif</option>
            </select>
          </div>

          <!-- Discipline sportive -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Discipline sportive</label>
            <select name="sport_discipline" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
              <option value="Aucun">Aucun</option>
              <option value="Endurance">Endurance</option>
              <option value="Force">Force</option>
              <option value="Mixte">Mixte</option>
            </select>
          </div>

          <!-- Fr√©quence s√©ances -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Fr√©quence s√©ances / semaine</label>
            <input type="number" name="frequence_seances" placeholder="3" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Dur√©e s√©ance -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Dur√©e moyenne (min)</label>
            <input type="number" name="duree_moyenne_min" placeholder="45" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- D√©pense √©nerg√©tique -->
          <div class="space-y-1 md:col-span-2">
            <label class="block text-sm font-medium">D√©pense √©nerg√©tique (kcal/jour)</label>
            <input type="number" name="depense_energetique" placeholder="2300" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Objectif -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Objectif</label>
            <select name="objectif" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
              <option value="">-- Choisir --</option>
              <option value="Perte poids">Perte poids</option>
              <option value="Prise masse">Prise masse</option>
              <option value="Maintien">Maintien</option>
              <option value="Sport">Sport</option>
              <option value="Pathologie">Pathologie</option>
            </select>
          </div>

          <!-- Calories cible -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Calories cible (kcal/jour)</label>
            <input type="number" name="calories_cible" placeholder="2000" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Pathologie -->
          <div class="space-y-1 md:col-span-2">
            <label class="block text-sm font-medium">Type pathologie (si applicable)</label>
            <textarea name="type_pathologie" rows="3" placeholder="ex: diab√®te, hypertension" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200"></textarea>
          </div>

          <!-- Glucides -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Glucides (%)</label>
            <input type="number" name="glucides_pct" placeholder="50" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Prot√©ines -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Prot√©ines (%)</label>
            <input type="number" name="proteines_pct" placeholder="20" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>

          <!-- Lipides -->
          <div class="space-y-1">
            <label class="block text-sm font-medium">Lipides (%)</label>
            <input type="number" name="lipides_pct" placeholder="30" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-200">
          </div>
        </div>

        <!-- Validation message -->
        <p id="macro-msg" class="text-sm text-red-600 hidden">La somme des pourcentages doit √™tre 100%.</p>

        <!-- Buttons -->
        <div class="flex justify-between pt-4">
          <button type="submit" class="px-5 py-2 bg-indigo-600 text-white rounded-lg shadow-sm hover:bg-indigo-700">Sauvegarder</button>
          <button type="reset" class="px-4 py-2 border rounded-lg">Reset</button>
        </div>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-gray-300 py-6 mt-10">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
      <p>¬© 2025 Plan Nutrition. Tous droits r√©serv√©s.</p>
