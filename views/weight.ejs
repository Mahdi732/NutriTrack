<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weight Management - NutriTrack</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&display=swap');
        .font-serif { font-family: 'Crimson Pro', serif; }
    </style>
</head>
<body class="bg-stone-50 font-sans">
    <!-- Navigation -->
    <nav class="bg-white border-b border-stone-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <span class="text-2xl">üçé</span>
                    <span class="ml-2 text-xl font-serif font-semibold text-stone-900">NutriTrack</span>
                </div>
                <div class="flex items-center space-x-8">
                    <nav class="space-x-6 text-sm">
                        <a href="/index" class="text-stone-600 hover:text-stone-900 transition">Home</a>
                        <a href="/meal" class="text-stone-600 hover:text-stone-900 transition">Analysis</a>
                        <a href="/rapport" class="text-stone-600 hover:text-stone-900 transition">Reports</a>
                        <a href="/performance" class="text-stone-600 hover:text-stone-900 transition">Performance</a>
                        <a href="/weight" class="text-stone-900 hover:text-stone-600 transition">Weight</a>
                        <% if (user) { %>
                        <a href="/profile" class="text-stone-600 hover:text-stone-900 transition">Profile</a>
                        <% } %>
                    </nav>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="mb-12">
            <h1 class="text-4xl font-serif font-bold text-stone-900 mb-4">Weight Management</h1>
            <p class="text-lg text-stone-600">Track your weight evolution, BMI, and estimated muscle mass</p>
        </div>

        <!-- Controls -->
        <div class="bg-white border border-stone-200 rounded-lg p-6 mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <label class="block text-sm font-medium text-stone-700 mb-2">Tracking Period</label>
                    <select id="periodSelect" class="border border-stone-300 rounded-md px-4 py-2 text-stone-900 focus:outline-none focus:ring-2 focus:ring-stone-400">
                        <option value="30" <%= selectedPeriod === 30 ? 'selected' : '' %>>Last 30 Days</option>
                        <option value="60" <%= selectedPeriod === 60 ? 'selected' : '' %>>Last 60 Days</option>
                        <option value="90" <%= selectedPeriod === 90 ? 'selected' : '' %>>Last 90 Days</option>
                        <option value="180" <%= selectedPeriod === 180 ? 'selected' : '' %>>Last 6 Months</option>
                    </select>
                </div>
                <div class="flex gap-4">
                    <button onclick="showAddWeightModal()" class="bg-stone-900 text-white px-6 py-2 rounded-md hover:bg-stone-800 transition-colors">
                        Add Weight Entry
                    </button>
                    <button class="border border-stone-300 text-stone-700 px-6 py-2 rounded-md hover:bg-stone-50 transition-colors">
                        Export Data
                    </button>
                </div>
            </div>
        </div>

        <!-- Current Stats -->
        <section class="mb-12">
            <div class="bg-white border border-stone-200 rounded-lg p-8">
                <h2 class="text-2xl font-serif font-semibold text-stone-900 mb-6">Current Status</h2>
                
                <div class="grid md:grid-cols-3 gap-6 mb-8">
                    <div class="text-center border border-stone-200 rounded-lg p-6">
                        <p class="text-sm text-stone-600 mb-2">Current Weight</p>
                        <p class="text-3xl font-serif font-bold text-stone-900">
                            <%= weightData.currentStats.currentWeight %> kg
                        </p>
                        <p class="text-sm mt-2 <%= weightData.trends.weightChange > 0 ? 'text-red-500' : weightData.trends.weightChange < 0 ? 'text-green-500' : 'text-stone-500' %>">
                            <%= weightData.trends.weightChange > 0 ? '+' : '' %><%= weightData.trends.weightChange %> kg this period
                        </p>
                    </div>
                    <div class="text-center border border-stone-200 rounded-lg p-6">
                        <p class="text-sm text-stone-600 mb-2">BMI</p>
                        <p class="text-3xl font-serif font-bold text-stone-900">
                            <%= weightData.currentStats.currentBMI %>
                        </p>
                        <p class="text-sm text-stone-500 mt-2">
                            <% if (weightData.currentStats.currentBMI < 18.5) { %>
                                Underweight
                            <% } else if (weightData.currentStats.currentBMI < 25) { %>
                                Normal range
                            <% } else if (weightData.currentStats.currentBMI < 30) { %>
                                Overweight
                            <% } else { %>
                                Obese
                            <% } %>
                        </p>
                    </div>
                    <div class="text-center border border-stone-200 rounded-lg p-6">
                        <p class="text-sm text-stone-600 mb-2">Muscle Mass</p>
                        <p class="text-3xl font-serif font-bold text-stone-900">
                            <%= weightData.currentStats.currentMuscleMass.toFixed(1) %> kg
                        </p>
                        <p class="text-sm mt-2 <%= weightData.trends.muscleMassChange > 0 ? 'text-green-500' : weightData.trends.muscleMassChange < 0 ? 'text-red-500' : 'text-stone-500' %>">
                            <%= weightData.trends.muscleMassChange > 0 ? '+' : '' %><%= weightData.trends.muscleMassChange %> kg this period
                        </p>
                    </div>
                </div>

                <!-- Goal Progress -->
                <% if (weightData.currentStats.targetWeight) { %>
                <div class="border border-stone-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-stone-900 mb-4">Goal Progress</h3>
                    <div class="space-y-3">
                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-stone-600">Target: <%= weightData.currentStats.targetWeight %> kg</span>
                                <span class="text-stone-900 font-medium"><%= weightData.progress.progressPercentage %>%</span>
                            </div>
                            <div class="w-full bg-stone-200 rounded-full h-3">
                                <div class="bg-stone-900 h-3 rounded-full" style="width: <%= Math.min(100, weightData.progress.progressPercentage) %>%"></div>
                            </div>
                        </div>
                        <div class="flex justify-between text-sm text-stone-600">
                            <span><%= weightData.progress.remainingKg %> kg remaining</span>
                            <span>Est. <%= weightData.progress.estimatedWeeks %> weeks</span>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </section>

        <!-- Weight Evolution Chart -->
        <section class="mb-12">
            <div class="bg-white border border-stone-200 rounded-lg p-8">
                <h2 class="text-2xl font-serif font-semibold text-stone-900 mb-6">Weight Evolution</h2>
                
                <div class="h-96 mb-6">
                    <canvas id="weightChart"></canvas>
                </div>
                
                <div class="flex items-center justify-center gap-8">
                    <div class="flex items-center gap-2">
                        <div class="w-4 h-0.5 bg-blue-500"></div>
                        <span class="text-sm text-stone-600">Weight (kg)</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="w-4 h-0.5 bg-green-500"></div>
                        <span class="text-sm text-stone-600">Muscle Mass (kg)</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- BMI Tracking -->
        <section class="mb-12">
            <div class="bg-white border border-stone-200 rounded-lg p-8">
                <h2 class="text-2xl font-serif font-semibold text-stone-900 mb-6">BMI Tracking</h2>
                
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="h-64">
                        <canvas id="bmiChart"></canvas>
                    </div>
                    
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-stone-900">BMI Categories</h3>
                        <div class="space-y-3">
                            <div class="flex items-center justify-between p-3 rounded-lg bg-blue-50">
                                <span class="text-sm text-stone-700">Underweight</span>
                                <span class="text-sm font-medium text-stone-900">&lt; 18.5</span>
                            </div>
                            <div class="flex items-center justify-between p-3 rounded-lg bg-green-50">
                                <span class="text-sm text-stone-700">Normal</span>
                                <span class="text-sm font-medium text-stone-900">18.5 - 24.9</span>
                            </div>
                            <div class="flex items-center justify-between p-3 rounded-lg bg-yellow-50">
                                <span class="text-sm text-stone-700">Overweight</span>
                                <span class="text-sm font-medium text-stone-900">25.0 - 29.9</span>
                            </div>
                            <div class="flex items-center justify-between p-3 rounded-lg bg-red-50">
                                <span class="text-sm text-stone-700">Obese</span>
                                <span class="text-sm font-medium text-stone-900">&geq; 30.0</span>
                            </div>
                        </div>
                        
                        <div class="mt-6 p-4 bg-stone-100 rounded-lg">
                            <p class="text-sm text-stone-700">
                                <strong>Your current BMI:</strong> <%= weightData.currentStats.currentBMI %>
                            </p>
                            <p class="text-xs text-stone-600 mt-1">
                                BMI is a general indicator and may not reflect individual body composition.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Insights -->
        <section>
            <div class="bg-stone-900 text-white rounded-lg p-8">
                <h2 class="text-2xl font-serif font-semibold mb-4">Weight Management Insights</h2>
                <div class="grid md:grid-cols-<%= Math.min(3, weightData.insights.length) %> gap-6">
                    <% weightData.insights.forEach(insight => { %>
                    <div class="border border-stone-700 rounded-lg p-6">
                        <div class="text-3xl mb-3">
                            <% if (insight.type === 'success') { %>‚úÖ<% } else if (insight.type === 'warning') { %>‚ö†Ô∏è<% } else { %>‚ÑπÔ∏è<% } %>
                        </div>
                        <h3 class="font-semibold mb-2"><%= insight.title %></h3>
                        <p class="text-stone-300 text-sm"><%= insight.message %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>
    </main>

    <!-- Add Weight Modal -->
    <div id="addWeightModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
            <h3 class="text-xl font-serif font-semibold text-stone-900 mb-6">Add Weight Entry</h3>
            <form id="addWeightForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-stone-700 mb-1">Date</label>
                    <input type="date" name="date" required class="w-full px-3 py-2 border border-stone-300 rounded-md focus:outline-none focus:ring-2 focus:ring-stone-400">
                </div>
                <div>
                    <label class="block text-sm font-medium text-stone-700 mb-1">Weight (kg)</label>
                    <input type="number" name="weight" step="0.1" min="20" max="300" required class="w-full px-3 py-2 border border-stone-300 rounded-md focus:outline-none focus:ring-2 focus:ring-stone-400">
                </div>
                <div>
                    <label class="block text-sm font-medium text-stone-700 mb-1">Body Fat % (optional)</label>
                    <input type="number" name="bodyFat" step="0.1" min="0" max="50" class="w-full px-3 py-2 border border-stone-300 rounded-md focus:outline-none focus:ring-2 focus:ring-stone-400">
                </div>
                <div>
                    <label class="block text-sm font-medium text-stone-700 mb-1">Muscle Mass (kg) - optional</label>
                    <input type="number" name="muscleMass" step="0.1" min="0" class="w-full px-3 py-2 border border-stone-300 rounded-md focus:outline-none focus:ring-2 focus:ring-stone-400">
                    <p class="text-xs text-stone-500 mt-1">Leave empty for automatic estimation</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-stone-700 mb-1">Notes (optional)</label>
                    <textarea name="notes" rows="3" class="w-full px-3 py-2 border border-stone-300 rounded-md focus:outline-none focus:ring-2 focus:ring-stone-400"></textarea>
                </div>
                <div class="flex gap-4 pt-4">
                    <button type="submit" class="flex-1 bg-stone-900 text-white py-2 rounded-md hover:bg-stone-800 transition-colors">
                        Add Entry
                    </button>
                    <button type="button" onclick="hideAddWeightModal()" class="flex-1 border border-stone-300 text-stone-700 py-2 rounded-md hover:bg-stone-50 transition-colors">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Chart data from server
        const chartData = <%- JSON.stringify(weightData.chartData) %>;
        
        // Weight Evolution Chart
        const ctx1 = document.getElementById('weightChart').getContext('2d');
        new Chart(ctx1, {
            type: 'line',
            data: {
                labels: chartData.dates,
                datasets: [{
                    label: 'Weight (kg)',
                    data: chartData.weights,
                    borderColor: 'rgb(59, 130, 246)',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'Muscle Mass (kg)',
                    data: chartData.muscleMass,
                    borderColor: 'rgb(34, 197, 94)',
                    backgroundColor: 'rgba(34, 197, 94, 0.1)',
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });

        // BMI Chart
        const ctx2 = document.getElementById('bmiChart').getContext('2d');
        new Chart(ctx2, {
            type: 'line',
            data: {
                labels: chartData.dates,
                datasets: [{
                    label: 'BMI',
                    data: chartData.bmis,
                    borderColor: 'rgb(168, 85, 247)',
                    backgroundColor: 'rgba(168, 85, 247, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        min: 15,
                        max: 35
                    }
                },
                plugins: {
                    annotation: {
                        annotations: {
                            normalRange: {
                                type: 'box',
                                yMin: 18.5,
                                yMax: 24.9,
                                backgroundColor: 'rgba(34, 197, 94, 0.1)',
                                borderColor: 'rgba(34, 197, 94, 0.3)',
                                borderWidth: 1
                            }
                        }
                    }
                }
            }
        });

        // Modal functions
        function showAddWeightModal() {
            document.getElementById('addWeightModal').classList.remove('hidden');
            document.getElementById('addWeightModal').classList.add('flex');
            // Set today's date as default
            document.querySelector('input[name="date"]').value = new Date().toISOString().split('T')[0];
        }

        function hideAddWeightModal() {
            document.getElementById('addWeightModal').classList.add('hidden');
            document.getElementById('addWeightModal').classList.remove('flex');
        }

        // Form submission
        document.getElementById('addWeightForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/weight/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    hideAddWeightModal();
                    location.reload(); // Refresh to show new data
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error adding weight entry');
            }
        });

        // Period selection
        document.getElementById('periodSelect').addEventListener('change', (e) => {
            window.location.href = `/weight?days=${e.target.value}`;
        });
    </script>
</body>
</html>
